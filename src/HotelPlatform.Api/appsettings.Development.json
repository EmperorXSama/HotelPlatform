{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/hotel-platform",
    "Audience": "hotel-api"
  },
  "Database": {
    "ConnectionString": "",
    "MaxRetryCount": 3,
    "CommandTimeOut": 30
  },
  "Storage": {
    "PrimaryProvider": "AzureBlob",
    "EnableFallback": true,
    "AzureBlob": {
      "ConnectionString": "",
      "ContainerName": "hotelplatform",
      "CreateContainerIfNotExists": true
    },
    "LocalStorage": {
      "BasePath": "uploads",
      "BaseUrl": "/files"
    },
    "Validation": {
      "MaxFileSizeBytes": 10485760,
      "AllowedContentTypes": [
        "image/jpeg",
        "image/png",
        "image/gif",
        "image/webp"
      ],
      "AllowedExtensions": [
        ".jpg",
        ".jpeg",
        ".png",
        ".gif",
        ".webp"
      ]
    }
  },
  "KeyVault": {
    "Url": "https://shopflow-kv.vault.azure.net/"
  }
}
