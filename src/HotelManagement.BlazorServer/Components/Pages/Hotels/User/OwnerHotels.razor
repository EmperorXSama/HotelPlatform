@page "/Hotels"
@using HotelManagement.BlazorServer.Components.Pages.Hotels.Shared
@using HotelManagement.BlazorServer.Components.Pages.Hotels.Shared.DashsboardHotelDetailComponentss
@using HotelManagement.BlazorServer.Components.Shared
@using HotelManagement.BlazorServer.models.Response.Hotels
@using HotelManagement.BlazorServer.Services.Hotel
@inject IHotelApiService HotelApiService

<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">My Hotels</h1>
        <p class="text-gray-600">Manage and view all your hotel properties</p>
    </div>

    <!-- Error Message -->
    @if (_errorMessages.Any() )
    {
        foreach (var errorMessage in _errorMessages)
        {
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6 flex items-start">
                <svg class="w-5 h-5 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                <div>
                    <h3 class="font-semibold mb-1">Error Loading Hotels</h3>
                    <p class="text-sm">@errorMessage.Description</p>
                </div>
            </div>
        }
      
    }

    <!-- Loading State -->
    @if (_isLoading)
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @for (int i = 0; i < 3; i++)
            {
                <div class="bg-white rounded-lg shadow-md overflow-hidden animate-pulse">
                    <div class="h-48 bg-gray-300"></div>
                    <div class="p-5">
                        <div class="h-6 bg-gray-300 rounded mb-3"></div>
                        <div class="h-4 bg-gray-200 rounded mb-2 w-3/4"></div>
                        <div class="h-4 bg-gray-200 rounded mb-4 w-1/2"></div>
                        <div class="flex gap-2">
                            <div class="h-10 bg-gray-200 rounded flex-1"></div>
                            <div class="h-10 bg-gray-200 rounded w-20"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (_hotels.Any())
    {
        <!-- Stats Summary -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg px-6 py-4 mb-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <svg class="w-5 h-5 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
                    </svg>
                    <span class="font-semibold text-gray-900">You have @_hotels.Count hotel@(_hotels.Count != 1 ? "s" : "")</span>
                </div>
                <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add New Hotel
                </button>
            </div>
        </div>
        
    }
    else if (!_isLoading && !_errorMessages.Any() )
    {
        <!-- Empty State -->
        <div class="text-center py-16">
            <div class="mb-4">
                <svg class="w-24 h-24 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">No Hotels Yet</h3>
            <p class="text-gray-600 mb-6">Start by adding your first hotel property</p>
            <button class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors inline-flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Your First Hotel
            </button>
        </div>
    }
    
    @if (_hotels.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var hotel in _hotels)
            {
                <OwnedHotelCard Hotel="@hotel" OnViewDetails="OpenHotelDetails" />
            }
        </div>
    }

</div>
<FullPageModal @bind-IsOpen="_isModalOpen" Title="@(_selectedHotel?.Name ?? "Hotel Details")">
    @if (_selectedHotel is not null)
    {
        <div class="w-full mx-auto px-4">
            <HotelDetailModal Hotel="@_selectedHotel"
                              OnHotelDataChanged="HandleHotelDataChanged"/>
        </div>
    }
</FullPageModal>


@code {
    List<HotelDetailResponse> _hotels = [];
    List<Error> _errorMessages = [];
    bool _isLoading = true;

    HotelDetailResponse? _selectedHotel;
    bool _isModalOpen;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        var result = await HotelApiService.GetByOwnerIdAsync();
        if (result.IsError)
            _errorMessages = result.Errors;
        else
            _hotels = result.Value;
        _isLoading = false;
    }

    private void OpenHotelDetails(HotelDetailResponse hotel)
    {
        _selectedHotel = hotel;
        _isModalOpen = true;
    }

    private async Task HandleHotelDataChanged(HotelDetailResponse updatedHotel)
    {
        var index = _hotels.FindIndex(h => h.Id == updatedHotel.Id);
        if (index >= 0)
        {
            _hotels[index] = updatedHotel;
        }
        
        _selectedHotel = updatedHotel;
        
        StateHasChanged();
    }
}