@page "/hotels/create"
@using HotelManagement.BlazorServer.Components.Pages.Hotels.Shared
@using HotelManagement.BlazorServer.Components.Shared.Picture

<PageTitle>Create Hotel</PageTitle>

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4">
        @* Header *@
        <div class="mb-8">
            <button type="button" 
                    class="flex items-center gap-2 text-gray-500 hover:text-gray-700 mb-4"
                    @onclick="GoBack">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                <span>Back to Hotels</span>
            </button>
            <h1 class="text-3xl font-bold text-gray-900">Create New Hotel</h1>
            <p class="mt-2 text-gray-600">Fill in the details to list your property</p>
        </div>

        <div class="space-y-8">
            @* Step 1: Basic Information *@
            <section class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-100 bg-gray-50">
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 rounded-full bg-coral-100 text-coral-700 
                                    flex items-center justify-center font-semibold text-sm">1</div>
                        <h2 class="text-lg font-semibold text-gray-900">Basic Information</h2>
                    </div>
                </div>
                
                <div class="p-6 space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Hotel Name <span class="text-red-500">*</span>
                            </label>
                            <input type="text"
                                   @bind="_hotelModel.Name"
                                   class="w-full px-4 py-3 border border-gray-200 rounded-xl 
                                          focus:outline-none focus:ring-2 focus:ring-coral-500 
                                          focus:border-transparent"
                                   placeholder="Enter hotel name" />
                        </div>
                        
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                            <textarea @bind="_hotelModel.Description"
                                      rows="4"
                                      class="w-full px-4 py-3 border border-gray-200 rounded-xl 
                                             focus:outline-none focus:ring-2 focus:ring-coral-500 
                                             focus:border-transparent resize-none"
                                      placeholder="Describe your hotel..."></textarea>
                        </div>
                    </div>
                </div>
            </section>

            @* Step 2: Address *@
            <section class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-100 bg-gray-50">
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 rounded-full bg-coral-100 text-coral-700 
                                    flex items-center justify-center font-semibold text-sm">2</div>
                        <h2 class="text-lg font-semibold text-gray-900">Location</h2>
                    </div>
                </div>
                
                <div class="p-6 space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Street Address <span class="text-red-500">*</span>
                            </label>
                            <input type="text"
                                   @bind="_addressModel.Street"
                                   class="w-full px-4 py-3 border border-gray-200 rounded-xl 
                                          focus:outline-none focus:ring-2 focus:ring-coral-500"
                                   placeholder="123 Main Street" />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                City <span class="text-red-500">*</span>
                            </label>
                            <input type="text"
                                   @bind="_addressModel.City"
                                   class="w-full px-4 py-3 border border-gray-200 rounded-xl 
                                          focus:outline-none focus:ring-2 focus:ring-coral-500"
                                   placeholder="City" />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Country <span class="text-red-500">*</span>
                            </label>
                            <input type="text"
                                   @bind="_addressModel.Country"
                                   class="w-full px-4 py-3 border border-gray-200 rounded-xl 
                                          focus:outline-none focus:ring-2 focus:ring-coral-500"
                                   placeholder="Country" />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Postal Code</label>
                            <input type="text"
                                   @bind="_addressModel.PostalCode"
                                   class="w-full px-4 py-3 border border-gray-200 rounded-xl 
                                          focus:outline-none focus:ring-2 focus:ring-coral-500"
                                   placeholder="12345" />
                        </div>
                        
                        <div class="md:col-span-2">
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Latitude</label>
                                    <input type="number"
                                           step="0.000001"
                                           @bind="_addressModel.Latitude"
                                           class="w-full px-4 py-3 border border-gray-200 rounded-xl 
                                                  focus:outline-none focus:ring-2 focus:ring-coral-500"
                                           placeholder="40.7128" />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Longitude</label>
                                    <input type="number"
                                           step="0.000001"
                                           @bind="_addressModel.Longitude"
                                           class="w-full px-4 py-3 border border-gray-200 rounded-xl 
                                                  focus:outline-none focus:ring-2 focus:ring-coral-500"
                                           placeholder="-74.0060" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @* Step 3: Pictures *@
            <section>
                <div class="flex items-center gap-3 mb-4 px-1">
                    <div class="w-8 h-8 rounded-full bg-coral-100 text-coral-700 
                                flex items-center justify-center font-semibold text-sm">3</div>
                    <h2 class="text-lg font-semibold text-gray-900">Pictures</h2>
                </div>
                
                <PictureUploader Config="_pictureUploaderConfig"
                                 @bind-Pictures="_uploadedPictures" />
            </section>

            @* Step 4: Amenities *@
            <section>
                <div class="flex items-center gap-3 mb-4 px-1">
                    <div class="w-8 h-8 rounded-full bg-coral-100 text-coral-700 
                                flex items-center justify-center font-semibold text-sm">4</div>
                    <h2 class="text-lg font-semibold text-gray-900">Amenities</h2>
                </div>
                
                <AmenitySelector Config="_amenitySelectorConfig"
                                 @bind-SelectedAmenities="_selectedAmenities"
                                 ShowActions="false" />
            </section>

            @* Summary & Submit *@
            <section class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-100 bg-gray-50">
                    <h2 class="text-lg font-semibold text-gray-900">Summary</h2>
                </div>
                
                <div class="p-6">
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                        <div class="text-center p-4 bg-gray-50 rounded-xl">
                            <p class="text-2xl font-bold text-gray-900">
                                @_uploadedPictures.Count(p => !p.HasError && !p.IsUploading)
                            </p>
                            <p class="text-sm text-gray-500">Pictures</p>
                        </div>
                        <div class="text-center p-4 bg-gray-50 rounded-xl">
                            <p class="text-2xl font-bold text-gray-900">@_selectedAmenities.Count</p>
                            <p class="text-sm text-gray-500">Amenities</p>
                        </div>
                        <div class="text-center p-4 bg-gray-50 rounded-xl">
                            <p class="text-2xl font-bold text-gray-900">
                                @_selectedAmenities.Count(a => a.HasUpcharge)
                            </p>
                            <p class="text-sm text-gray-500">Paid Amenities</p>
                        </div>
                        <div class="text-center p-4 bg-gray-50 rounded-xl">
                            <p class="text-2xl font-bold @(IsValid ? "text-green-600" : "text-amber-600")">
                                @(IsValid ? "Ready" : "Incomplete")
                            </p>
                            <p class="text-sm text-gray-500">Status</p>
                        </div>
                    </div>

                    @* Validation Errors *@
                    @if (_validationErrors.Any())
                    {
                        <div class="mb-6 p-4 bg-amber-50 border border-amber-200 rounded-xl">
                            <div class="flex items-start gap-3">
                                <svg class="w-5 h-5 text-amber-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                </svg>
                                <div>
                                    <p class="font-medium text-amber-800">Please fix the following:</p>
                                    <ul class="mt-1 text-sm text-amber-700 list-disc list-inside">
                                        @foreach (var error in _validationErrors)
                                        {
                                            <li>@error</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }

                    @* API Errors *@
                    @if (_apiErrors.Any())
                    {
                        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl">
                            <div class="flex items-start gap-3">
                                <svg class="w-5 h-5 text-red-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <div>
                                    <p class="font-medium text-red-800">Failed to create hotel</p>
                                    <ul class="mt-1 text-sm text-red-700 list-disc list-inside">
                                        @foreach (var error in _apiErrors)
                                        {
                                            <li>@error</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }

                    @* Action Buttons *@
                    <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                        <button type="button" 
                                class="px-6 py-3 text-gray-600 hover:text-gray-900 font-medium transition-colors"
                                @onclick="GoBack">
                            Cancel
                        </button>
                        
                        <button type="button"
                                disabled="@(_isSubmitting || !IsValid)"
                                class="px-8 py-3 bg-gray-900 text-white font-medium rounded-xl 
                                       hover:bg-gray-800 transition-colors disabled:opacity-50 
                                       disabled:cursor-not-allowed flex items-center gap-2"
                                @onclick="CreateHotel">
                            @if (_isSubmitting)
                            {
                                <div class="animate-spin rounded-full h-5 w-5 border-2 border-white border-t-transparent"></div>
                                <span>Creating...</span>
                            }
                            else
                            {
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                                </svg>
                                <span>Create Hotel</span>
                            }
                        </button>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>