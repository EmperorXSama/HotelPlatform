@* Components/Hotels/HotelCard.razor *@
@using HotelManagement.BlazorServer.Components.Shared
@using HotelManagement.BlazorServer.models.Response.Hotels

<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
    <!-- Main Image -->
    <div class="relative h-48 bg-gray-200">
        @if (Hotel.Pictures.Any())
        {
            var mainPicture = Hotel.Pictures.FirstOrDefault(p => p.IsMain) 
                           ?? Hotel.Pictures.OrderBy(p => p.DisplayOrder).First();
            <img src="@mainPicture.Url" 
                 alt="@Hotel.Name" 
                 class="w-full h-full object-cover" />
        }
        else
        {
            <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-300 to-gray-400">
                <svg class="w-16 h-16 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </div>
        }
        
        <!-- Status Badge -->
        <div class="absolute top-3 right-3">
            <span class="px-3 py-1 text-xs font-semibold rounded-full @GetStatusBadgeClass()">
                @Hotel.Status
            </span>
        </div>
    </div>

    <!-- Content -->
    <div class="p-5">
        <!-- Header -->
        <div class="mb-3">
            <h3 class="text-xl font-bold text-gray-900 mb-1 line-clamp-1">@Hotel.Name</h3>
            
            <!-- Address -->
            @if (Hotel.Address != null)
            {
                <div class="flex items-start text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-1 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="line-clamp-1">@Hotel.Address.City, @Hotel.Address.Country</span>
                </div>
            }
        </div>

        <!-- Rating -->
        <div class="flex items-center mb-4">
            <div class="flex items-center bg-blue-600 text-white px-2.5 py-1 rounded-lg mr-2">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="font-bold">@Hotel.Rating.AverageScore.ToString("F1")</span>
            </div>
            <span class="text-sm text-gray-600">(@Hotel.Rating.TotalCount reviews)</span>
        </div>

        <!-- Description -->
        @if (!string.IsNullOrEmpty(Hotel.Description))
        {
            <p class="text-sm text-gray-700 mb-4 line-clamp-2">@Hotel.Description</p>
        }

        <!-- Amenities Summary -->
        @if (Hotel.Amenities.Any())
        {
            var categories = Hotel.Amenities
                .Where(a => !string.IsNullOrEmpty(a.Category))
                .Select(a => a.Category!)
                .Distinct()
                .ToList();
            
            <div class="mb-4">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-semibold text-gray-700">Amenities</span>
                    <span class="text-xs text-gray-500">@Hotel.Amenities.Count total</span>
                </div>
                
                <!-- Category Tags -->
                @if (categories.Any())
                {
                    <div class="flex flex-wrap gap-1.5 mb-3">
                        @foreach (var category in categories.Take(3))
                        {
                            <span class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded">
                                @category
                            </span>
                        }
                        @if (categories.Count > 3)
                        {
                            <span class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded">
                                +@(categories.Count - 3) more
                            </span>
                        }
                    </div>
                }
                
                <!-- Featured Amenity Icons -->
                <div class="flex items-center gap-3">
                    @foreach (var amenity in Hotel.Amenities.Where(a => !string.IsNullOrEmpty(a.IconCode)).Take(6))
                    {
                        <div class="group relative">
                            <AmenityIcon IconCode="@amenity.IconCode" 
                                       CssClass="text-gray-600 group-hover:text-blue-600 transition-colors" 
                                       Size="20" />
                            <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 bg-gray-900 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">
                                @amenity.Name
                            </div>
                        </div>
                    }
                    @if (Hotel.Amenities.Count(a => !string.IsNullOrEmpty(a.IconCode)) > 6)
                    {
                        <span class="text-xs text-gray-500 font-medium">
                            +@(Hotel.Amenities.Count(a => !string.IsNullOrEmpty(a.IconCode)) - 6)
                        </span>
                    }
                </div>
            </div>
        }

        <!-- Rooms Summary -->
        @if (Hotel.Rooms.Any())
        {
            <div class="flex items-center text-sm text-gray-600 mb-4">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                <span>@Hotel.Rooms.Count room type@(Hotel.Rooms.Count != 1 ? "s" : "")</span>
            </div>
        }

        <!-- Action Buttons -->
        <div class="flex gap-2 pt-3 border-t border-gray-200">
            <button @onclick="() => OnViewDetails.InvokeAsync(Hotel)"
                    class="flex-1 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors">
                View Details
            </button>
            <button class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm font-medium rounded-lg transition-colors">
                Edit
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public HotelDetailResponse Hotel { get; set; } = null!;

    [Parameter]
    public EventCallback<HotelDetailResponse> OnViewDetails { get; set; }

    private string GetStatusBadgeClass()
    {
        return Hotel.Status.ToLower() switch
        {
            "active" => "bg-green-100 text-green-800",
            "inactive" => "bg-gray-100 text-gray-800",
            "pending" => "bg-yellow-100 text-yellow-800",
            _ => "bg-blue-100 text-blue-800"
        };
    }
}
