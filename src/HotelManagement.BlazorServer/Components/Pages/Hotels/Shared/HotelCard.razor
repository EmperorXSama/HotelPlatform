@using HotelManagement.BlazorServer.models.Response.Hotels
@* HotelCard.razor *@
<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col h-full">
    @* Hotel Image *@
    <div class="relative h-48 bg-gray-200 overflow-hidden">
        @if (!string.IsNullOrEmpty(Hotel.MainPictureUrl))
        {
            <img src="@Hotel.MainPictureUrl" 
                 alt="@Hotel.Name" 
                 class="w-full h-full object-cover" />
        }
        else
        {
            <div class="w-full h-full flex items-center justify-center bg-gray-300">
                <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
            </div>
        }
        
        @* Rating Badge *@
        @if (Hotel.AverageRating.HasValue)
        {
            <div class="absolute top-3 right-3 bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-semibold shadow-lg">
                @Hotel.AverageRating.Value.ToString("F1") ★
            </div>
        }
    </div>

    @* Hotel Details *@
    <div class="p-4 flex flex-col flex-grow">
        @* Hotel Name *@
        <h3 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2">@Hotel.Name</h3>
        
        @* Location *@
        @if (!string.IsNullOrEmpty(Hotel.City) || !string.IsNullOrEmpty(Hotel.Country))
        {
            <div class="flex items-center text-gray-600 mb-3">
                <svg class="w-4 h-4 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="text-sm">
                    @if (!string.IsNullOrEmpty(Hotel.City))
                    {
                        @Hotel.City
                    }
                    @if (!string.IsNullOrEmpty(Hotel.City) && !string.IsNullOrEmpty(Hotel.Country))
                    {
                        <text>, </text>
                    }
                    @if (!string.IsNullOrEmpty(Hotel.Country))
                    {
                        @Hotel.Country
                    }
                </span>
            </div>
        }

        @* Reviews and Amenities *@
        <div class="flex items-center justify-between mt-auto pt-3 border-t border-gray-200">
            <div class="flex items-center text-gray-600">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                </svg>
                <span class="text-sm">@Hotel.AmenityCount.ToString("N0") reviews</span>
            </div>
            
            <div class="flex items-center text-gray-600">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                </svg>
                <span class="text-sm">@Hotel.AmenityCount amenities</span>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public HotelSummaryResponse Hotel { get; set; } = null!;
}