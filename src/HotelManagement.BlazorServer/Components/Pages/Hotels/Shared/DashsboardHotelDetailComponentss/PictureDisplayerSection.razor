@using HotelManagement.BlazorServer.models.Response.Hotels

    @if (Pictures.Any())
    {
        var mainPicture = Pictures.FirstOrDefault(p => p.IsMain)
                          ?? Pictures.OrderBy(p => p.DisplayOrder).First();

        var sidePictures = Pictures
            .Where(p => p.StoredFileId != mainPicture.StoredFileId)
            .OrderBy(p => p.DisplayOrder)
            .Take(2)
            .ToList();

        var remainingPictures = Pictures
            .Where(p => p.StoredFileId != mainPicture.StoredFileId
                        && !sidePictures.Select(s => s.StoredFileId).Contains(p.StoredFileId))
            .OrderBy(p => p.DisplayOrder)
            .ToList();

        <!-- Main Grid: 3 columns × 2 rows, fixed 420px total height -->
        <div class="grid grid-cols-3 grid-rows-2 gap-4 h-96">
            <!-- Main Picture: spans 2 columns and 2 rows -->
            <div class="col-span-2 row-span-2 relative group cursor-pointer overflow-hidden rounded-lg">
                <img src="@mainPicture.Url"
                     alt="@HotelName"
                     class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
                
                <!-- Hover overlay -->
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-all duration-300 flex items-end justify-end p-3 gap-2 opacity-0 group-hover:opacity-100 z-10">
                    <button @onclick="() => OnDeletePicture.InvokeAsync(mainPicture.StoredFileId)"
                            class="p-2.5 bg-red-600 hover:bg-red-700 text-white rounded-lg shadow-lg transition-colors"
                            title="Delete photo">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Side Pictures: each takes 1 column × 1 row -->
            @if (sidePictures.Count > 0)
            {
                @foreach (var pic in sidePictures)
                {
                    <div class="relative group cursor-pointer overflow-hidden rounded-lg">
                        <img src="@pic.Url"
                             alt="@HotelName"
                             class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
                        <!-- Hover overlay -->
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-all duration-300 flex items-end justify-end p-2 gap-1.5 opacity-0 group-hover:opacity-100 z-10">
                            <button @onclick="() => OnSetMainPicture.InvokeAsync(pic.StoredFileId)"
                                    class="p-2 bg-white hover:bg-gray-100 text-gray-800 rounded-lg shadow-lg transition-colors"
                                    title="Set as main photo">
                                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                            </button>
                            <button @onclick="() => OnDeletePicture.InvokeAsync(pic.StoredFileId)"
                                    class="p-2 bg-red-600 hover:bg-red-700 text-white rounded-lg shadow-lg transition-colors"
                                    title="Delete photo">
                                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                }

                @* If only 1 side picture, fill the empty slot *@
                @if (sidePictures.Count == 1)
                {
                    <div class="bg-gray-100 flex items-center justify-center">
                        <svg class="w-10 h-10 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                    </div>
                }
            }
            else
            {
                <!-- 2 placeholders when no side pictures -->
                @for (var i = 0; i < 2; i++)
                {
                    <div class="bg-gray-100 flex items-center justify-center">
                        <svg class="w-10 h-10 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                    </div>
                }
            }
        </div>

        <!-- Remaining Pictures Grid -->
        @if (remainingPictures.Any() )
        {
            <div class="mt-3 grid grid-cols-5 gap-3">
                @foreach (var pic in remainingPictures)
                {
                    <div class="relative group cursor-pointer overflow-hidden rounded-lg h-24">
                        <img src="@pic.Url"
                             alt="@HotelName"
                             class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
                        <!-- Hover overlay -->
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-all duration-300 flex items-end justify-end p-1.5 gap-1 opacity-0 group-hover:opacity-100 z-10">
                            <button @onclick="() => OnSetMainPicture.InvokeAsync(pic.StoredFileId)"
                                    class="p-1.5 bg-white hover:bg-gray-100 text-gray-800 rounded-md shadow-lg transition-colors"
                                    title="Set as main photo">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                            </button>
                            <button @onclick="() => OnDeletePicture.InvokeAsync(pic.StoredFileId)"
                                    class="p-1.5 bg-red-600 hover:bg-red-700 text-white rounded-md shadow-lg transition-colors"
                                    title="Delete photo">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                }

                <!-- Add Photo Button -->
                @if (Pictures.Count < 5)
                {
                    <button @onclick="() => OnAddPicture.InvokeAsync()"
                            class="h-24 rounded-lg border-2 border-dashed border-gray-300 hover:border-blue-400 hover:bg-blue-50 transition-colors flex flex-col items-center justify-center gap-1">
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        <span class="text-xs text-gray-500 font-medium">Add Photo</span>
                    </button>
                }
                
            </div>
        }
    }
    else
    {
        <!-- No Pictures State -->
        <div class="h-64 rounded-xl border-2 border-dashed border-gray-300 flex flex-col items-center justify-center gap-3 bg-gray-50">
            <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="text-gray-500 font-medium">No photos uploaded yet</p>
            <button @onclick="() => OnAddPicture.InvokeAsync()"
                    class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors inline-flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Upload Photos
            </button>
        </div>
    }

@code{

    [Parameter, EditorRequired] public List<HotelPictureResponse> Pictures { get; set; }
    [Parameter] public string HotelName { get; set; } = string.Empty;
    [Parameter] public EventCallback<HotelPictureResponse> OnAddPicture { get; set; }
    [Parameter] public EventCallback<Guid> OnSetMainPicture { get; set; }
    [Parameter] public EventCallback<Guid> OnDeletePicture { get; set; }
