@using HotelManagement.BlazorServer.Components.Shared
@using HotelManagement.BlazorServer.Models
@using HotelManagement.BlazorServer.models.Response.RefereneceData

@* Components/Amenities/UpchargeEditor.razor *@

<div class="fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    @* Backdrop *@
    <div class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm transition-opacity" 
         @onclick="OnCancel"></div>

    @* Modal Panel *@
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative transform overflow-hidden rounded-2xl bg-white shadow-2xl 
                    transition-all w-full max-w-md">
            
            @* Header *@
            <div class="px-6 py-4 border-b border-gray-100">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-xl bg-coral-100 flex items-center justify-center">
                            <AmenityIcon IconCode="@Amenity.IconCode" 
                                         Size="20" 
                                         CssClass="text-coral-700" />
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">@Amenity.Name</h3>
                            <p class="text-sm text-gray-500">Configure pricing</p>
                        </div>
                    </div>
                    <button type="button" 
                            class="p-2 rounded-lg hover:bg-gray-100 transition-colors"
                            @onclick="OnCancel">
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            </div>

            @* Body *@
            <div class="px-6 py-5 space-y-5">
                @* Upcharge Type Toggle *@
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">
                        Pricing Type
                    </label>
                    <div class="grid grid-cols-2 gap-3">
                        <button type="button"
                                class="@GetPricingTypeClass(UpchargeType.Flat)"
                                @onclick="() => SetUpchargeType(UpchargeType.Flat)">
                            <div class="flex items-center gap-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="font-medium">Flat Fee</span>
                            </div>
                            <p class="text-xs text-gray-500 mt-1">One-time charge</p>
                        </button>
                        <button type="button"
                                class="@GetPricingTypeClass(UpchargeType.PercentagePerNight)"
                                @onclick="() => SetUpchargeType(UpchargeType.PercentagePerNight)">
                            <div class="flex items-center gap-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                                </svg>
                                <span class="font-medium">Per Night %</span>
                            </div>
                            <p class="text-xs text-gray-500 mt-1">% of room rate</p>
                        </button>
                    </div>
                </div>

                @* Amount Input *@
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        @(_model.UpchargeType == UpchargeType.Flat ? "Amount" : "Percentage")
                    </label>
                    
                    @if (_model.UpchargeType == UpchargeType.Flat)
                    {
                        <div class="flex gap-3">
                            @* Currency Selector *@
                            <div class="relative">
                                <select class="appearance-none h-12 pl-4 pr-10 bg-gray-50 border border-gray-200 
                                               rounded-xl text-gray-700 font-medium focus:outline-none 
                                               focus:ring-2 focus:ring-coral-500 focus:border-transparent"
                                        @bind="_model.Currency">
                                    @foreach (var currency in AvailableCurrencies)
                                    {
                                        <option value="@currency">@currency</option>
                                    }
                                </select>
                                <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none">
                                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                    </svg>
                                </div>
                            </div>
                            
                            @* Amount Input *@
                            <div class="flex-1 relative">
                                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 font-medium">
                                    @GetCurrencySymbol(_model.Currency)
                                </span>
                                <input type="number" 
                                       step="0.01" 
                                       min="0"
                                       class="w-full h-12 pl-8 pr-4 bg-gray-50 border border-gray-200 rounded-xl 
                                              text-gray-900 font-medium focus:outline-none focus:ring-2 
                                              focus:ring-coral-500 focus:border-transparent"
                                       placeholder="0.00"
                                       @bind="_model.UpchargeAmount" />
                            </div>
                        </div>
                    }
                    else
                    {
                        @* Percentage Input *@
                        <div class="relative">
                            <input type="number" 
                                   step="1" 
                                   min="0" 
                                   max="100"
                                   class="w-full h-12 pl-4 pr-10 bg-gray-50 border border-gray-200 rounded-xl 
                                          text-gray-900 font-medium focus:outline-none focus:ring-2 
                                          focus:ring-coral-500 focus:border-transparent"
                                   placeholder="0"
                                   @bind="_percentageDisplay" />
                            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 font-medium">
                                %
                            </span>
                        </div>
                        <p class="mt-2 text-xs text-gray-500">
                            This percentage will be applied to the room rate for each night
                        </p>
                    }
                </div>

                @* Quick Amount Buttons (for Flat fee) *@
                @if (_model.UpchargeType == UpchargeType.Flat)
                {
                    <div class="flex flex-wrap gap-2">
                        <span class="text-sm text-gray-500">Quick:</span>
                        @foreach (var amount in new[] { 0m, 10m, 25m, 50m, 100m })
                        {
                            <button type="button"
                                    class="@GetQuickAmountClass(amount)"
                                    @onclick="() => SetQuickAmount(amount)">
                                @(amount == 0 ? "Free" : $"{GetCurrencySymbol(_model.Currency)}{amount}")
                            </button>
                        }
                    </div>
                }
                else
                {
                    <div class="flex flex-wrap gap-2">
                        <span class="text-sm text-gray-500">Quick:</span>
                        @foreach (var pct in new[] { 0m, 5m, 10m, 15m, 20m })
                        {
                            <button type="button"
                                    class="@GetQuickPercentageClass(pct)"
                                    @onclick="() => SetQuickPercentage(pct)">
                                @(pct == 0 ? "Free" : $"{pct}%")
                            </button>
                        }
                    </div>
                }

                @* Preview *@
                <div class="p-4 bg-gray-50 rounded-xl">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Price display:</span>
                        <span class="text-lg font-semibold text-coral-700">
                            @GetPreviewDisplay()
                        </span>
                    </div>
                </div>
            </div>

            @* Footer *@
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 flex items-center justify-between">
                <button type="button"
                        class="px-4 py-2 text-sm font-medium text-red-600 hover:text-red-700 
                               hover:bg-red-50 rounded-lg transition-colors"
                        @onclick="() => OnRemove.InvokeAsync(Amenity.AmenityId)">
                    Remove amenity
                </button>
                
                <div class="flex gap-3">
                    <button type="button"
                            class="px-4 py-2 text-sm font-medium text-gray-600 bg-white 
                                   border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
                            @onclick="OnCancel">
                        Cancel
                    </button>
                    <button type="button"
                            class="px-5 py-2 text-sm font-medium text-white bg-coral-600 
                                   rounded-lg hover:bg-coral-700 transition-colors"
                            @onclick="Save">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired] 
    public SelectedAmenityModel Amenity { get; set; } = default!;
    
    [Parameter] 
    public List<string> AvailableCurrencies { get; set; } = ["USD", "EUR", "MAD"];
    
    [Parameter] 
    public EventCallback<SelectedAmenityModel> OnSave { get; set; }
    
    [Parameter] 
    public EventCallback OnCancel { get; set; }
    
    [Parameter] 
    public EventCallback<Guid> OnRemove { get; set; }

    private SelectedAmenityModel _model = new();
    private decimal _percentageDisplay;

    protected override void OnParametersSet()
    {
        // Create a copy to avoid modifying the original until save
        _model = new SelectedAmenityModel
        {
            AmenityId = Amenity.AmenityId,
            Code = Amenity.Code,
            Name = Amenity.Name,
            IconCode = Amenity.IconCode,
            Category = Amenity.Category,
            UpchargeType = Amenity.UpchargeType,
            UpchargeAmount = Amenity.UpchargeAmount,
            Currency = Amenity.Currency ?? "USD"
        };
        
        // Convert decimal (0.0-1.0) to percentage (0-100) for display
        _percentageDisplay = _model.UpchargeType == UpchargeType.PercentagePerNight 
            ? _model.UpchargeAmount * 100 
            : 0;
    }

    private void SetUpchargeType(UpchargeType type)
    {
        if (_model.UpchargeType != type)
        {
            _model.UpchargeType = type;
            _model.UpchargeAmount = 0;
            _percentageDisplay = 0;
        }
    }

    private void SetQuickAmount(decimal amount) => _model.UpchargeAmount = amount;

    private void SetQuickPercentage(decimal percentage)
    {
        _percentageDisplay = percentage;
        _model.UpchargeAmount = percentage / 100m;
    }

    private async Task Save()
    {
        // Convert percentage display back to decimal if needed
        if (_model.UpchargeType == UpchargeType.PercentagePerNight)
        {
            _model.UpchargeAmount = _percentageDisplay / 100m;
        }
        
        await OnSave.InvokeAsync(_model);
    }

    private string GetPreviewDisplay()
    {
        if (_model.UpchargeAmount == 0 && _percentageDisplay == 0)
            return "Free (included)";

        return _model.UpchargeType switch
        {
            UpchargeType.Flat => $"{GetCurrencySymbol(_model.Currency)}{_model.UpchargeAmount:N2}",
            UpchargeType.PercentagePerNight => $"{_percentageDisplay:N0}% per night",
            _ => "Free"
        };
    }

    private string GetCurrencySymbol(string? currency) => currency switch
    {
        "USD" => "$",
        "EUR" => "€",
        "GBP" => "£",
        _ => "$"
    };

    private string GetPricingTypeClass(UpchargeType type) =>
        $"p-4 rounded-xl border-2 text-left transition-all " +
        (_model.UpchargeType == type
            ? "border-coral-500 bg-coral-50"
            : "border-gray-200 bg-white hover:border-gray-300");

    private string GetQuickAmountClass(decimal amount) =>
        $"px-3 py-1 text-sm rounded-full transition-colors " +
        (_model.UpchargeAmount == amount
            ? "bg-coral-100 text-coral-700 font-medium"
            : "bg-gray-100 text-gray-600 hover:bg-gray-200");

    private string GetQuickPercentageClass(decimal pct) =>
        $"px-3 py-1 text-sm rounded-full transition-colors " +
        (_percentageDisplay == pct
            ? "bg-coral-100 text-coral-700 font-medium"
            : "bg-gray-100 text-gray-600 hover:bg-gray-200");
}
